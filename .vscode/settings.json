{
	"editor.rulers": [100],
	"editor.tabSize": 4,
	"editor.formatOnSave": true,
	"editor.indentSize": "tabSize",
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit",
		"source.organizeImports": "explicit"
	},

	// Disable Dart Formatter
	"dart.enableSdkFormatter": false,
	// Dart-Code extension sets language-specific settings.
	// Ref: https://github.com/Dart-Code/Dart-Code/blob/0f22ea3c770950702add7d629433f4f011bd9069/package.json#L1362
	"[dart]": {
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	},

	// Dart Settings for files outside of Dart
	"editor.defaultFormatter": "dprint.dprint",

	// XML Tools Settings
	"xmlTools.enforcePrettySelfClosingTagOnFormat": true,
	"xmlTools.splitAttributesOnFormat": true,
	"xmlTools.splitXmlnsOnFormat": true,

	// Licenser Settings
	"licenser.author": "Curstantine",
	"licenser.license": "GPLv3",
	"licenser.disableAutoHeaderInsertion": true,

	// Dart Auto Generated Files
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"*.dart": "${capture}.*.dart"
	},
	"files.exclude": {
		"build/": true,
		".dart_tool/": true,
		".flutter-plugins": true,
		".flutter-plugins-dependencies": true
	},

	"cSpell.words": [
		"Checkmark",
		"curstantine",
		"debouncer",
		"deduped",
		"doujinshi",
		"fantia",
		"josei",
		"mangadex",
		"naver",
		"nico",
		"Oneshot",
		"pixiv",
		"premade",
		"preserialization",
		"Reorderable",
		"riba",
		"riverpod",
		"roboto",
		"rxdart",
		"scanlation",
		"seinen",
		"Serde",
		"shoujo",
		"shounen",
		"skeb",
		"tappable",
		"vsync",
		"weibo",
		"Zoomable"
	]
}
